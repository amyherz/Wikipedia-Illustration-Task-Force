\definecolor{uicred}{rgb}{0.937255, 0.2, 0.25098}	%hex #ef3340 
\definecolor{uicpurple}{rgb}{0., 0.12549, 0.356863}	%hex #00205b
\definecolor{uicblue}{rgb}{0., 0.709804, 0.886275}	%hex #00b5e2
\definecolor{aliceblue}{rgb}{0.94, 0.97, 1.0}

\setbeamercolor{headline}{bg=aliceblue}
\setbeamercolor{footline}{bg=aliceblue,fg=uicpurple}
\setbeamerfont{footline}{size=\large}
\setbeamercolor{separation line}{bg=uicred}
\setbeamercolor{title in headline}{fg=uicred}
\setbeamercolor{author in headline}{fg=uicpurple}
\setbeamercolor{institute in headline}{fg=uicpurple}

\setbeamercolor{framesubtitle}{fg=blue, bg=gray}
\setbeamercolor{author in head/foot}{fg=uicpurple}
\setbeamercolor{title in head/foot}{fg=uicpurple}
\setbeamercolor{website in footline}{fg=uicpurple}
\setbeamercolor{email in footline}{fg=uicpurple}

\setbeamercolor*{normal text}{fg=black, bg=white}
\setbeamercolor*{block body}{fg=black,bg=white}
\setbeamercolor*{block title}{fg=black,bg=aliceblue}
\setbeamerfont{block title}{size=\large,series=\bf}
\setbeamercolor{upper separation line head}{fg=black}

% \setbeamertemplate{blocks}[rounded][shadow=true]

% \setbeamertemplate{itemize items}[triangle]
\setbeamertemplate{navigation symbols}{}  % no navigation on a poster

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\setbeamertemplate{block begin}{
  \vskip0.5ex
  \begin{tcolorbox}[
  title={\usebeamerfont{block title}{\large\insertblocktitle}},
  colbacktitle=aliceblue,
  colback=white,
  colframe=black,
  coltitle=black,
  toptitle=3mm,
  bottomtitle=3mm,
  after skip=7mm
  ]%
  \usebeamerfont{block body}%
  \ifbeamercolorempty[bg]{block body}{\vskip0.3ex}{\vskip0.3ex}\vbox{}%
  \leftskip=1.0ex\rightskip=1.0ex
}
\setbeamertemplate{block end}{
  \ifbeamercolorempty[bg]{block body}{\vskip0.3ex}{\vskip0.3ex}\vbox{}%
  \end{tcolorbox}
}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\setbeamertemplate{headline}{
  \leavevmode

  \begin{beamercolorbox}[wd=\paperwidth,ht=4cm,dp=3.8cm]{headline}
    \begin{tabular}{m{.75\paperwidth} m{.25\paperwidth}}
      \parbox{.75\paperwidth}{
        \raggedleft
        \usebeamercolor{title in headline}{\color{fg}\textbf{\LARGE{\inserttitle}}\\[1ex]}
        \usebeamercolor{author in headline}{\color{fg}\Large{\insertauthor}\\[1ex]}
        \usebeamercolor{institute in headline}{\color{fg}\large{\insertinstitute}}
       }
     &
     \hfill \includegraphics[height=0.045\paperwidth]{graphics/logo-mcl} 
     \hfill \includegraphics[height=0.045\paperwidth]{graphics/logo-uic}
     \hfill ${}$
    \end{tabular}
  \end{beamercolorbox}

  \begin{beamercolorbox}[wd=\paperwidth]{lower separation line head}
    \rule{0pt}{2pt}
  \end{beamercolorbox}
}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\setbeamertemplate{footline}{
  \begin{beamercolorbox}[wd=\paperwidth]{upper separation line foot}
    \rule{0pt}{2pt}
  \end{beamercolorbox}

  \begin{beamercolorbox}[ht=1.4cm,dp=0.6cm,leftskip=1cm,rightskip=1cm]{footline}%
     ${}$
     \footleft
     \hfill
     \footright
     ${}$
  \end{beamercolorbox}

}

